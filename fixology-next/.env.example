# ============================================================
# Fixology â€” Environment Variables (example)
# Copy to .env.local and fill values.
# NEVER commit real secrets in .env.local
# ============================================================

# ------------------------------------------------------------
# Core (REQUIRED)
# ------------------------------------------------------------
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/db?schema=public
DIRECT_URL=postgresql://USER:PASSWORD@HOST:PORT/db?schema=public

NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Used to build absolute URLs in Stripe redirects + Launch Readiness expected webhook URL.
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ------------------------------------------------------------
# Stripe (REQUIRED for paid plans)
# ------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_STARTER=price_xxx
STRIPE_PRICE_PROFESSIONAL=price_xxx

# Optional: Stripe customer portal configuration (if you created one)
STRIPE_PORTAL_CONFIGURATION_ID=

# ------------------------------------------------------------
# Email (REQUIRED for contact form + customer notifications)
# ------------------------------------------------------------
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=hello@fixologyai.com

# Optional: email branding
# If set, BaseLayout will render an <img> logo in emails.
EMAIL_LOGO_URL=

# Contact form routing
CONTACT_TO=support@fixologyai.com
CONTACT_FROM=noreply@fixologyai.com
CONTACT_REPLYTO=support@fixologyai.com

# Optional: Support ticket routing (falls back to CONTACT_*)
SUPPORT_TO=support@fixologyai.com
SUPPORT_FROM=noreply@fixologyai.com

# Optional: Launch Readiness test email routing
LAUNCH_READINESS_TEST_EMAIL_TO=support@fixologyai.com
LAUNCH_READINESS_TEST_EMAIL_FROM=hello@fixologyai.com

# Optional: Cron authentication (for scheduled trial reminder emails, etc.)
CRON_SECRET=change-me-to-a-long-random-secret

# ------------------------------------------------------------
# Sentry (RECOMMENDED)
# ------------------------------------------------------------
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ------------------------------------------------------------
# Admin Auth (REQUIRED for /admin in production)
# ------------------------------------------------------------
ADMIN_JWT_SECRET=change-me-to-a-long-random-secret

# ------------------------------------------------------------
# Optional Integrations
# ------------------------------------------------------------
# Novita AI (chat/diagnostics enhancements)
NOVITA_API_KEY=

# IMEI provider
IMEICHECK_API_KEY=

