{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ],
  "builds": [
    { "src": "api-backend/api/**/*.js", "use": "@vercel/node", "config": { "maxLambdaSize": "10mb" } }
  ],
  "routes": [
